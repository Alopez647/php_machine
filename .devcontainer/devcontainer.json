// .devcontainer/devcontainer.json
{
  "name": "PHP Dev",
  "image": "mcr.microsoft.com/devcontainers/php:8.2",
  "forwardPorts": [8000],
  "customizations": {
    "vscode": {
      "extensions": ["vscodevim.vim"]
    }
  },
  // Single string for postCreateCommand
  // Everything is on one line. No extra backslashes needed.
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y vim curl && cp -v .devcontainer/workspace/.vimrc ~/ && cp -v .devcontainer/workspace/.tmux.conf ~/ && curl -fLo ~/.vim/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim && su vscode -c 'vim +PlugInstall +qall'"
}
